{
    "extends": "astro/tsconfigs/strict",
    "include": [
        ".astro/types.d.ts",
        "**/*"
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@scripts/*": ["src/scripts/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@styles/*": ["src/styles/*"],
            "@assets/*": ["src/assets/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}