---
import BurguerSvg from "@components/Svg/BurguerSvg.astro";
import ArrowRightSvg from "@components/Svg/ArrowRightSvg.astro";
import LinkedinSvg from "@components/Svg/LinkedinSvg.astro";
import GithubSvg from "@components/Svg/GithubSvg.astro";
---

<section class="desktopMainBarMenu__content">
    <div class="desktopMainBarMenu__component">
        <div class="desktopMainBarMenu__mobileSideSubMenuBar">
            <button id="idArrowRightButtonMainBarMenu">
                <ArrowRightSvg />
            </button>
        </div>
        <div class="desktopMainBarMenu__logo">
            <strong>
                <a href="/project-documentation/">
                    TrulyDigital
                </a>
            </strong>
        </div>
        <div class="desktopMainBarMenu__projects">
            <a href="/project-documentation/">
                Home
            </a>
        </div>
        <ul class="desktopMainBarMenu__items">
            <li>
                <a href="/project-documentation/DATA_STREET">
                    Data Street
                </a>
            </li>
            <li>
                <a href="/project-documentation/DOCKER_STACK">
                    Docker Stack
                </a>
            </li>
        </ul>
    </div>
    <div class="desktopMainBarMenu__socialAndMobileSideBarMenu">
        <li>
            <a 
                href="https://www.linkedin.com/in/alex-daniel-meza-lopez/"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Abrir en una nueva pestaña (enlace externo)"
                title="Linkedin"
            >
                <LinkedinSvg />
            </a>
        </li>
        <li>
            <a 
                href="https://github.com/TrulyDigital"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Abrir en una nueva pestaña (enlace externo)"
                title="Github"
            >
                <GithubSvg />
            </a>
        </li>
        <button 
            class="burguerButtonMainBarMenu"
            id="idBurguerButtonMainBarMenu"
        >
            <BurguerSvg />
        </button>
    </div>
</section>