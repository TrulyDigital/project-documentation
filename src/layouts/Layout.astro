---
import DesktopSideBarMenu from "@components/DesktopSideBarMenu.astro";
import DesktopMainBarMenu from "@components/DesktopMainBarMenu.astro";
import MobileSideBarMenu from "@components/MobileSideBarMenu.astro";
import Aside from "@components/AsideLayout.astro";
import Footer from "@components/Footer.astro";
import '/src/styles/global.css';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/project-documentation/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Project Documentation</title>
    </head>
    <body 
        class="mainLayout__content"
        id="idBody"
    >

        <nav class="desktopMainBarMenuLayout__content">
            <DesktopMainBarMenu />
        </nav>

        <nav class="desktopSideBarMenuLayout__content">
            <DesktopSideBarMenu />
        </nav>

        <nav 
            class="
                mobileSideBarMenuLayout__content
                mobileSideBarMenuLayout__content-close
            "
            id="idMobileSideBarMenu"
        >
            <MobileSideBarMenu />
        </nav>

        <article class="articleLayout__content">
            <section class="article__content">
                <slot />
            </section>
        </article>

        <aside class="asideLayout__content">
            <Aside />
        </aside>

        <footer class="footerLayout__content">
            <Footer />
        </footer>
        
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>

<script>
    import { application } from "@scripts/main";
    application();
</script>
